@using ToDoDemo.ViewModels
@model ToDoIndexViewModel


<div class="row">
    <div class="col-md-2">
        @* <form action="Filter" method="post"> *@
        <form asp-controller="Home" asp-action="Index" method="get">

            <div class="mb-3">
                <label class="form-label">Category</label>
                <select asp-for="FilterVm.Category" class="form-select"
                        asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name", Model.Filters.CategoryId))">
                    <option value="all">All</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Due</label>
                <select asp-for="FilterVm.Due" class="form-select"
                        asp-items="@(new SelectList(Model.DueFilters, "Key", "Value", Model.Filters.Due))">
                    <option value="all">All</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Status</label>
                <select asp-for="FilterVm.Status" class="form-select"
                        asp-items="@(new SelectList(Model.Statuses, "StatusId", "Name", Model.Filters.StatusId))">
                    <option value="all">All</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">Clear</a>
        </form>
    </div>
    <div class="col-md-10">
        <form asp-controller="Home" asp-action="MarkComplete" method="post" asp-route-id="@Model.Filters.FilterString">
            <table class="table table-bordered table-striped mt-2">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th class="w-25"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ToDo task in Model.ToDos)
                    {
                        string overdue = task.Overdue ? "bg-warning" : "";
                        <tr>
                            <td>@task.Description</td>
                            <td>@task.Category.Name</td>
                            <td class="@overdue">@task.DueDate?.ToShortDateString()</td>
                            <td class="@overdue">@task.Status.Name</td>
                            <td>
                                @if (task.StatusId == "open")
                                {
                                    <button type="submit" class="btn btn-primary btn-sm" 
                                    name="@nameof(ToDo.Id)" value="@task.Id">
                                    Mark Completed
                                    </button>
                                }
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </form>
        <form asp-action="DeleteComplete" method="post" asp-route-id="@Model.Filters.FilterString">
            <a asp-action="Add" class="btn btn-primary" >Add New Task</a>
            <button type="submit" class="btn btn-primary">Delete Completed Task</button>
        </form>
    </div>
</div>